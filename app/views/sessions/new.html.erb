<section class="container">
   <div class="login-box">
      <h1 class="custom-title-text">Clock In App</h1>
      <h3>Login</h3>
      <%= form_tag '/login' do %>
         <%= label_tag :email, "Email:", id: "email-label"%>
         <%= text_field_tag :email %><br><br>
         <%= label_tag :password, "Password:"%>
         <%= password_field_tag :password%><br><br>
         <%= submit_tag "Log In", class: 'login-button wide'%>
      <%end%>
      <%= flash[:incorrect_login] %>
      <br>
      <p>Don't have an account?</p>
      <%= button_to "Register", '/users/new', method: :get, class: 'login-button wide'%>
   </div>
</section>

