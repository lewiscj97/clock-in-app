<section class="container">
  <div class="register-box">
    <h1 class="custom-title-text">Clock In App</h1>
    <h3>Register</h3>
    <%= form_for @user do |f|%>
      <%= f.label :email, value: 'Email:', id: 'register-email-label'%>
      <%= f.email_field :email, required: true %><br><br>
      <%= f.label :first_name, value: 'First name:', id: 'fname-label'%>
      <%= f.text_field :first_name, required: true %><br><br>
      <%= f.label :last_name, value: 'Last name:', id: 'lname-label'%>
      <%= f.text_field :last_name, required: true %><br><br>
      <%= f.label :password, value: 'Password:', id: 'password-label'%>
      <%= f.password_field :password, required: true %><br><br>
      <%= f.submit 'Create Account', class: 'login-button'%><br><br>
    <%end%>

    <p>Already have an account?</p>
    <%= button_to "Log In", '/login', method: :get, class: 'login-button'%>
  </div>
</section>
