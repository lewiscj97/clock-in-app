<style>
   .navbar{
  display: none;
  visibility: hidden;
   }
</style>

<div class="register-background">
  <section class="container">
    <div class="register-box">
      <h2 class="custom-title-text">Clock In App</h2>
      <h2>Register</h2>
      <%= form_for @user do |f|%>
        <%= f.label :email%><br>
        <%= f.email_field :email%><br><br>
        <%= f.label :first_name%><br>
        <%= f.text_field :first_name%><br><br>
        <%= f.label :last_name%><br>
        <%= f.text_field :last_name%><br><br>
        <%= f.label :password%><br>
        <%= f.password_field :password%><br><br>
        <%= f.submit 'Create Account', class: 'login-button'%><br><br>
      <%end%>

      <p>Already have an account?</p>
         <%= button_to "Log In", '/login', method: :get, class: 'login-button'%>
    </div>
  </section>
</div>