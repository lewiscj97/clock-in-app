<h1>Timesheet</h1>
<table>
  <thead>
    <tr>
      <th scope='col'></th>
      <th scope='col'>Monday</th>
      <th scope='col'>Tuesday</th>
      <th scope='col'>Wednesday</th>
      <th scope='col'>Thursday</th>
      <th scope='col'>Friday</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% for i in 0..3 do   %>
        <td><%= @monday.where(entry_type:i).first.entry_time.strftime('%H:%M')%></td>
        <td><%= @tuesday.where(entry_type:i).first.entry_time.strftime('%H:%M')%></td>
        <td><%= @wednesday.where(entry_type:i).first.entry_time.strftime('%H:%M')%></td>
        <td><%= @thursday.where(entry_type:i).first.entry_time.strftime('%H:%M')%></td>
        <td><%= @friday.where(entry_type:i).first.entry_time.strftime('%H:%M')%></td>
      <% end %>
    </tr>

  </tbody>
</table>